<Window x:Class="Desummer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desummer"
        xmlns:ScottPlot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="Desummer" Height="600" Width="800">
    <Grid>
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="137*"/>
                    <RowDefinition Height="155*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="99*"/>
                        <ColumnDefinition Width="494*"/>
                        <ColumnDefinition Width="190*"/>
                    </Grid.ColumnDefinitions>
                    <Grid x:Name="checkBoxGrid">
                        <CheckBox Content="A" HorizontalAlignment="Center" Margin="0,42,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="B" HorizontalAlignment="Center" Margin="0,72,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="C" HorizontalAlignment="Center" Margin="0,102,0,0" VerticalAlignment="Top"/>
                    </Grid>
                    <Grid x:Name="graphGrid" Grid.Column="1">
                        <ScottPlot:WpfPlot x:Name="temperatruePlot"/>
                    </Grid>
                    <Grid x:Name="temperatureGrid" Grid.Column="2">

                    </Grid>
                </Grid>
                <Grid x:Name="dataGrid" Grid.Row="1">
                    <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,31,0,-32"/>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
