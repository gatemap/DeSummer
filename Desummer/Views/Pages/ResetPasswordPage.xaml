<Page x:Class="Desummer.Views.Pages.ResetPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desummer.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      FontFamily="/DeSummer;components/Resources/#AppleSDGothicNeoM00"
      Background="Black"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="300"
      Title="ResetPasswordPage">
    <StackPanel Margin="0,60,0,0">
        <TextBlock TextWrapping="Wrap" Text="변경할 비밀번호 : " Foreground="White" FontSize="18" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
        <ui:PasswordBox x:Name="userPw" TextWrapping="Wrap" FontSize="14" VerticalAlignment="Center" Margin="70,0,25,0" MaxLength="20" MaxLines="1"/>
        <TextBlock TextWrapping="Wrap" Text="변경할 비밀번호 확인 : " Foreground="White" FontSize="18" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Center"/>
        <ui:PasswordBox x:Name="userPwCheck" TextWrapping="Wrap" FontSize="14" VerticalAlignment="Center" Margin="70,0,25,50" MaxLength="20" MaxLines="1"/>
        <ui:Button Content="변경" Click="Change_Password" HorizontalAlignment="Center"/>
    </StackPanel>
</Page>
